    "react-hot-toast": "latest",
    "uplot": "latest"
  },
  "devDependencies": {
    "@preact/preset-vite": "latest",
    "@tailwindcss/postcss": "latest",
    "autoprefixer": "latest",
    "postcss": "latest",
    "tailwindcss": "latest",
    "terser": "latest",
    "vite": "latest",
    "vite-plugin-compression": "latest"
  }
}
